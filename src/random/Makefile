clean:
	@echo Cleaning up...
	@echo Removing all Object Files... ; find . -name '*.o' -exec echo deleting {} \; -exec rm {} \;
	@echo Removing all Linux Temporary Files...; find . -name '*~' -exec echo deleting {} \; -exec rm {} \;
	@echo Done.
